page{color:#ffffff;font-size:30rpx;background:none;}
.container{width:750rpx;background:none;position:relative;padding-bottom:40rpx;min-height:100vh;}

.title{margin:50rpx auto 50rpx;font-size:56rpx;letter-spacing:10rpx;line-height:1;}
.login_bg{display:block;width:750rpx;height:100%;position:absolute;top:0;left:0;z-index:-4;filter:blur(15rpx)}
.login_bg::after{content:'';z-index:2;background:black;opacity:0.2;width:inherit;height:inherit;position:absolute;top:0;left:0;}


.input_outbox{width:560rpx;margin-top:12rpx;}
.left_title{width:3em;line-height:48rpx;}
.lookpassword{width:48rpx;height:48rpx;padding:20rpx 24rpx;}
.isinput{display:block;height:80rpx;padding-left:20rpx;border:solid 1rpx #ffffff;border-radius:10rpx;}
.radiobox{height:80rpx;}
.radio{transform:scale(.7)}
.istextarea{height:200rpx;padding:10rpx 20rpx;box-sizing:border-box;border:solid 1rpx #ffffff;border-radius:10rpx;}

.imgsbox{padding-top:20rpx;border:solid 1rpx #ffffff;border-radius:10rpx;}
.imgitembox{position:relative;width:186rpx;height:180rpx;margin-left:30rpx;margin-bottom:30rpx;box-sizing:border-box;}
.imgitem{width:inherit;height:inherit;border-radius:10rpx;border:solid 1rpx #ffffff;box-sizing:border-box;}
.clearicon{position:absolute;top:-20rpx;right:-20rpx;padding:8rpx;}
.addimg{border:dashed 2rpx #ffffff;border-radius:10rpx;position:relative;width:186rpx;height:180rpx;margin-left:30rpx;margin-bottom:30rpx;box-sizing:border-box;}
.addlineicon{width:70rpx;height:70rpx;position:relative;}
.addlineicon::before{content:'';display:block;width:5rpx;height:inherit;background:#ffffff;position:absolute;top:0;left:0;right:0;bottom:0;margin:auto;}
.addlineicon::after{content:'';display:block;width:inherit;height:5rpx;background:#ffffff;position:absolute;top:0;left:0;right:0;bottom:0;margin:auto;}
.imgtext{font-size:26rpx;color:#ffffff;margin-top:24rpx;letter-spacing:4rpx;}

.login_btn{font-size:36rpx;margin-top:60rpx;width:500rpx;height:96rpx;line-height:96rpx;text-align:center;border-radius:10rpx;background: rgba(0, 0, 0, 0.24);color:#ffffff;letter-spacing:10rpx;border:solid 1rpx #ffffff;}
.isplaceholder{color:#ffffff;}







